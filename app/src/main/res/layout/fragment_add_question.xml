<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"
tools:context=".AddQuestionFragment">
<TextView
        android:id="@+id/question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="20sp" />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:id="@+id/title"
    android:hint="Enter Question here"
    android:textAppearance="@style/TextAppearance.AppCompat.Large">
</EditText>
<TextView
        android:id="@+id/option_one_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option 1:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="20sp" />
<EditText
    android:id="@+id/edit_option_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Option 1"
    android:inputType="textMultiLine"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
        android:id="@+id/option_two_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option 2:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edit_option_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Option 2"
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:id="@+id/option_three_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option 3:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edit_option_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Option 3"
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
        android:id="@+id/option_correct_answer_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correct Answer:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edit_correct_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Correct Answer"
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        tools:context=".AddQuestionFragment">
    <Button
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Delete"
        android:layout_weight="1"
    android:id="@+id/button_delete"
        android:layout_margin="5dp"
    android:textSize="20sp">

</Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_weight="1"
        android:id="@+id/button_save"
        android:layout_margin="5dp"
        android:textSize="20sp">

    </Button>

    </LinearLayout>

</LinearLayout>