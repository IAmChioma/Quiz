<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"
tools:context=".AddQuestionFragment">
<TextView
        android:id="@+id/question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/question"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_question_here"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:ignore="TextContrastCheck"></EditText>
<TextView
        android:id="@+id/option_one_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_option_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_option_1"
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:ignore="TextContrastCheck" />
    <TextView
        android:id="@+id/option_two_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_2"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_option_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_option_2"
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/option_three_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_3"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_option_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_option_3"
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:ignore="TextContrastCheck" />
    <TextView
        android:id="@+id/option_correct_answer_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/correct_answer"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_correct_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_correct_answer"
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:ignore="TextContrastCheck" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        tools:context=".AddQuestionFragment">
    <Button
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/delete"
        android:layout_weight="1"
    android:id="@+id/button_delete"
        android:layout_margin="5dp"
    android:textSize="20sp">

</Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_weight="1"
        android:id="@+id/button_save"
        android:layout_margin="5dp"
        android:textSize="20sp">

    </Button>

    </LinearLayout>

</LinearLayout>